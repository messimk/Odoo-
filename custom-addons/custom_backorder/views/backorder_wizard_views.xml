<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="backorder_wizard_view" model="ir.ui.view">
        <field name="name">custom.backorder.confirmation.form</field>
        <field name="model">stock.backorder.confirmation</field>
        <field name="arch" type="xml">
            <form string="Backorder Confirmation">
                <p>You have processed less than the initial demand. Do you want to create a backorder for the remaining quantities?</p>
                <footer>
                    <button name="process_create_backorder" string="Create Backorder" type="object" class="btn-primary"/>
                    <button name="process_no_backorder" string="No Backorder" type="object" class="btn-secondary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>